{
  "name": "game-clock",
  "private": true,
  "scripts": {
    "format": "prettier \"src/clock.js\" \"style/**/*.css\" \"*.{html,md,json}\" \"{workbox-,rollup.}config.js\" --write",
    "build": "npm run prepare -- --optimize && npm run bundle && npm run minify:css && npm run sw && npm run gzip",
    "prepare": "snowpack",
    "sw": "workbox generateSW workbox-config.js",
    "bundle": "rollup -c",
    "minify:css": "sqwish viewer.css -o viewer.css",
    "gzip": "gzip -k9nrf index.html style/clock.css manifest.json icons/app.svg src/clock.js src/clock.bundle.js sw.js"
  },
  "dependencies": {
    "insights-js": "^1.2.9"
  },
  "devDependencies": {
    "prettier": "^1.19.1",
    "rollup": "^1.27.5",
    "rollup-plugin-terser": "^5.2.0",
    "snowpack": "^1.1.2",
    "sqwish": "^0.2.2",
    "workbox-cli": "^5.0.0"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  }
}
