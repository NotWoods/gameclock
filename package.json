{
  "name": "game-clock",
  "private": true,
  "scripts": {
    "build": "vite build",
    "postbuild": "workbox generateSW workbox-config.js",
    "dev": "vite",
    "lint": "prettier \"src/**/*\" \"style/**/*.css\" \"*.{html,md,json,yml}\" \"{workbox-,rollup.,vite.}config.js\" --check",
    "format": "prettier \"src/**/*\" \"style/**/*.css\" \"*.{html,md,json,yml}\" \"{workbox-,rollup.,vite.}config.js\" --write"
  },
  "dependencies": {
    "fathom-client": "^3.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-legacy": "^2.3.0",
    "prettier": "~2.7.1",
    "vite": "^3.2.0",
    "workbox-cli": "^6.5.4"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 120
        }
      }
    ]
  }
}
